{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@@/*": ["./*"],
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@adapters/*": ["src/adapters/*"],
      "@ui/*": ["src/ui/*"],
      "@store/*": ["src/services/store/*"],
      "@api/*": ["src/services/api/*"],
      "@machineFactory/*": ["src/services/machineFactory/*"],
      "@mock/*": ["src/services/mock/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@application/*": ["src/application/*"],
      "@domain/*": ["src/domain/*"]
    },
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "build"]
}
